<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="500" Width="500">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0.5"/>
        </Style>
        
    </Window.Resources>
    <Grid x:Name="Container">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Click="button_Click" x:Name ="button0_0" Grid.Column="0" Grid.Row="0" Content="X" FontSize="80"/>
        <Button Click="button_Click" x:Name ="button1_0" Grid.Column="1" Grid.Row="0" Content="O" FontSize="80"/>
        <Button Click="button_Click" x:Name ="button2_0" Grid.Column="2" Grid.Row="0" Content="O" FontSize="80"/>
        <Button Click="button_Click" x:Name ="button0_1" Grid.Column="0" Grid.Row="1" Content="X" FontSize="80"/>
        <Button Click="button_Click" x:Name ="button1_1" Grid.Column="1" Grid.Row="1" Content="X" FontSize="80"/>
        <Button Click="button_Click" x:Name ="button2_1" Grid.Column="2" Grid.Row="1" Content="X" FontSize="80"/>
        <Button Click="button_Click" x:Name ="button0_2" Grid.Column="0" Grid.Row="2" Content="X" FontSize="80"/>
        <Button Click="button_Click" x:Name ="button1_2" Grid.Column="1" Grid.Row="2" Content="X" FontSize="80"/>
        <Button Click="button_Click" x:Name ="button2_2" Grid.Column="2" Grid.Row="2" Content="X" FontSize="80"/>










    </Grid>
</Window>
